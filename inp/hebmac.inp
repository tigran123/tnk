% new parasha
\newcommand*{\parasha}[1]{%
	\leavevmode\unskip
	\stepcounter{parashanum}%
	\bibmark{oddhead}{#1}%
	\bibmarn{\mpr@parasha{\theparashanum}}%
	\hypertarget{\bkname\theparashanum}{}\label{\bkname\theparashanum}%
	\ignorespaces
}
\protected\def\mpr@parasha#1{<H>\maintextfalse\m{_{#1}}p<NIL>!</H>}

